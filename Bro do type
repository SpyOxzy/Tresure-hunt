    <script>
        function checkAnswer() {
            var answer = document.getElementById("answer").value.toLowerCase().trim();
            if (answer === "gym") {
                alert("You got the location!"); // Popup message
                document.getElementById("riddle-container").style.display = "none";
                document.getElementById("clue-container").style.display = "block";
            } else {
                document.getElementById("message").innerText = "Wrong answer! Try again.";
            }
        }
    </script>
